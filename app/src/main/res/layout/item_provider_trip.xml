<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_5"
    android:layout_marginTop="@dimen/dimen_5"
    android:layout_marginEnd="@dimen/dimen_5"
    android:layout_marginBottom="@dimen/dimen_20"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="@dimen/dimen_20"
    app:cardElevation="@dimen/dimen_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_item_product_provider_trip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200"
            android:scaleType="centerCrop"
            android:src="@color/loading_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_padding"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/main_padding"
            android:paddingEnd="@dimen/main_padding">

            <TextView
                android:id="@+id/tvTitle_item_product_provider_trip"
                style="@style/Text_Bold_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_"
                android:textAlignment="viewStart"
                android:textColor="@color/blue_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/dimen_80"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_5">

                    <TextView
                        android:id="@+id/tvStartTime_item_product_provider_trip"
                        style="@style/Text_Bold_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_" />

                    <TextView
                        android:id="@+id/tvStartDate_item_product_provider_trip"
                        style="@style/Text_Bold_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
                    android:textColor="@color/textColor" />

                <ImageView
                    style="@style/Text_Normal_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_next" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:text="- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - "
                    android:textColor="@color/textColor" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/dimen_80"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_5">

                    <TextView
                        android:id="@+id/tvEndTime_item_product_provider_trip"
                        style="@style/Text_Bold_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_" />

                    <TextView
                        android:id="@+id/tvEndDate_item_product_provider_trip"
                        style="@style/Text_Bold_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_padding"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="@dimen/dimen_5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RvPrices_item_product_provider_trip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.cardview.widget.CardView>


