        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_3"
            android:background="@drawable/shadow_inverse" />

        <include
            layout="@layout/banner_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


</LinearLayout>