<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/main_padding">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator_onboarding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_40"
        app:ci_drawable="@drawable/circle_indicator"
        app:ci_drawable_unselected="@drawable/circle_indicator"
        app:ci_height="@dimen/dimen_10"
        app:ci_width="@dimen/dimen_10" />

    <Button
        android:id="@+id/btn_onboarding_next"
        style="@style/Button_Bold_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_rectangle_blue_radius_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/main_padding"
        android:onClick="onClick"
        android:text="@string/next" />
</LinearLayout>