<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:background="@android:color/white">

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview_qr_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.wein_business.ui.controls.qr.ViewFinderOverlay
        android:id="@+id/overlay_qr_scanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layerType="software" />

    <ImageView
        android:id="@+id/ivFlashControl_qr_scanner"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="@dimen/main_padding"
        android:background="@color/black"
        android:padding="@dimen/dimen_10"
        android:src="@drawable/ic_round_flash_off" />

</FrameLayout>