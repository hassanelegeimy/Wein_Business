<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_image_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator_image_viewer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20"
        android:layout_gravity="bottom"
        app:ci_drawable="@drawable/circle_indicator"
        app:ci_drawable_unselected="@drawable/circle_indicator"
        app:ci_height="@dimen/dimen_10"
        android:layout_marginBottom="@dimen/dimen_40"
        app:ci_width="@dimen/dimen_10" />
</FrameLayout>