<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text_Bold_xlarge" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="Text_Bold_large" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="Text_Bold_default" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>


    <style name="Text_Bold_tiny" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="Text_Normal_large" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_normal</item>
    </style>

    <style name="Text_Normal_default" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_normal</item>
    </style>

    <style name="Button_Bold_default" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:background">@drawable/button_fill_rounded_10</item>
        <item name="android:textColor">@color/buttonsText</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>


    <style name="Button_Bold_default_no_back" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_bold</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke_color</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_20</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_20</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_20</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_20</item>

    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyleWrapper</item>
    </style>

    <style name="BottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="Spinner" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_normal</item>
        <item name="android:minHeight">@dimen/dimen_50</item>
        <item name= "android:padding">@dimen/dimen_10</item>
        <item name= "android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name= "android:drawablePadding">@dimen/dimen_10</item>
        <item name= "android:background">@drawable/border_spinner_radius_20</item>
    </style>

    <style name="Button_Normal_default_no_back_bordered" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/font_normal</item>
        <item name="android:minHeight">@dimen/dimen_50</item>
        <item name= "android:padding">@dimen/dimen_10</item>
        <item name= "android:drawablePadding">@dimen/dimen_10</item>
        <item name= "android:background">@drawable/border_spinner_radius_20</item>
    </style>
</resources>